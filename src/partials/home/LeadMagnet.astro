---
import { withBase } from '../../utils/links';
---
<section class="px-6 pb-6 pt-2">
  <div class="mx-auto max-w-6xl rounded-3xl border border-white/10 bg-white/5 p-6 shadow-glow">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
      <div class="space-y-2">
        <p class="text-xs uppercase tracking-[0.3em] text-rose-petal/70">Free launch checklist</p>
        <h2 class="font-display text-3xl text-white sm:text-4xl">Want a simple go-live plan?</h2>
        <p class="max-w-2xl text-sm text-white/75">
          Share your preferred contact method and we will send the starter checklist. We only contact 18+ creators who opt in.
        </p>
      </div>
      <a
        class="inline-flex rounded-full border border-rose-gold/40 bg-rose-gold/20 px-5 py-3 text-sm font-semibold uppercase tracking-[0.2em] text-rose-petal transition hover:border-rose-gold/60 hover:bg-rose-gold/30"
        href={withBase('/apply/')}
      >
        Get checklist
      </a>
    </div>
    <p class="mt-4 text-xs text-white/60">
      No passwords. No exclusivity. You own your accounts and content. Cancel anytime.
    </p>
  </div>
</section>
