---
import LinkCTA from '../../components/LinkCTA.astro';
import { PRIMARY_CTA } from '../../data/copy';
import { withBase } from '../../utils/links';
---
<section class="px-6 pb-16 pt-10">
  <div class="mx-auto max-w-4xl space-y-6 rounded-3xl border border-white/10 bg-white/5 p-8 text-center shadow-glow">
    <p class="text-[clamp(0.75rem,1.1vw,0.9rem)] uppercase tracking-[0.35em] text-rose-petal/70">
      Next move
    </p>
    <h2 class="font-display text-[clamp(2rem,4vw,2.6rem)] text-white">
      Join with our links, unlock the StartRight kit
    </h2>
    <p class="mx-auto max-w-2xl text-[clamp(0.95rem,1.7vw,1.1rem)] text-white/75">
      Sign up on your chosen platform, send quick proof, and we&apos;ll deliver the concierge kit so you can go live with polished
      scripts, settings, and pacing support.
    </p>
    <div class="flex flex-col items-center justify-center gap-4 sm:flex-row sm:gap-6">
      <LinkCTA
        class="border border-rose-gold/40 bg-rose-gold/20 px-7 py-3 text-rose-petal shadow-glow backdrop-blur-xl hover:border-rose-gold/60 hover:bg-rose-gold/30"
        pagesHref={PRIMARY_CTA.pagesHref}
        prodHref={PRIMARY_CTA.prodHref}
        label="Claim my kit"
      />
      <a
        class="text-[clamp(0.85rem,1.4vw,0.95rem)] uppercase tracking-[0.32em] text-white/70 transition hover:text-rose-gold"
        href={withBase('/compare')}
      >
        Compare platforms
      </a>
    </div>
  </div>
</section>
