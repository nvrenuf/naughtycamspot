---
import LinkCTA from '../../components/LinkCTA.astro';
import { HERO, PRIMARY_CTA } from '../../data/copy';
import { withBase } from '../../utils/links';

const primaryCta = {
  label: PRIMARY_CTA.label,
  href: PRIMARY_CTA.pagesHref
};
---
<section class="relative isolate overflow-hidden px-6 pb-24 pt-20 sm:pb-28 sm:pt-24">
  <div class="absolute inset-x-0 top-0 -z-10 flex justify-center">
    <div class="h-[480px] w-full max-w-5xl -translate-y-1/2 rounded-full bg-rose-gold/30 blur-3xl"></div>
  </div>
  <div class="mx-auto max-w-6xl">
    <div class="grid gap-16 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.85fr)] lg:items-center">
      <div class="space-y-7">
        <p class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-[clamp(0.7rem,1vw,0.85rem)] uppercase tracking-[0.4em] text-rose-petal/80">
          Concierge referral collective
        </p>
        <h1 class="font-display text-[clamp(2.8rem,6vw,4.25rem)] leading-[1.05] text-white">
          {HERO.title}
        </h1>
        <p class="max-w-xl text-[clamp(1.05rem,2.3vw,1.35rem)] text-white/80">
          {HERO.sub}
        </p>
        <p class="max-w-xl text-[clamp(0.95rem,2vw,1.1rem)] text-white/70">
          Trade management promises for concierge guidance. We map the right platforms, script your launch rituals, and send the
          StartRight kit once your proof lands.
        </p>
        <LinkCTA
          class="inline-flex border border-rose-gold/70 bg-rose-gold px-6 py-3 text-lg text-midnight shadow-glow"
          pagesHref={primaryCta.href}
          prodHref={primaryCta.href}
          label={primaryCta.label}
        />
      </div>
      <div class="grid gap-6">
        <div class="relative overflow-hidden rounded-[34px] border border-white/10 bg-white/5 p-6 backdrop-blur">
          <img
            class="h-full w-full rounded-3xl object-cover"
            src="https://images.unsplash.com/photo-1604076820743-9b9b9a4356f4?auto=format&fit=crop&w=900&q=80"
            alt="A model prepares lighting for a streaming setup"
            loading="lazy"
          />
        </div>
        <div class="glass relative overflow-hidden rounded-[28px] border border-white/10 bg-white/5 p-6">
          <p class="text-[clamp(0.75rem,1.5vw,0.95rem)] uppercase tracking-[0.4em] text-rose-petal/80">
            Why models stay â†’
          </p>
          <p class="mt-3 text-[clamp(0.95rem,2vw,1.1rem)] leading-relaxed text-white/75">
            Concierge support without contracts. Tap the StartRight desk, get growth rituals you can actually reuse, and stay in
            control of every account.
          </p>
          <a class="mt-5 inline-flex text-[clamp(0.78rem,1.4vw,0.9rem)] uppercase tracking-[0.35em] text-rose-gold transition hover:text-white" href={withBase('/disclosure')}>
            Read the concierge disclosure
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
