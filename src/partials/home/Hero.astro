---
import LinkCTA from '../../components/LinkCTA.astro';
import { normalizeLang, t } from '../../i18n/core';

const { lang: langProp = 'en' } = Astro.props as { lang?: string };
const lang = normalizeLang(langProp);
const trustPromises = [
  {
    title: 'No passwords',
    reason: 'You keep your login private. We guide by approved files only.'
  },
  {
    title: 'No exclusivity',
    reason: 'You can choose other work paths. You stay in control.'
  },
  {
    title: 'Model owns accounts',
    reason: 'Your accounts and payouts stay yours. We do not take ownership.'
  },
  {
    title: 'Cancel anytime',
    reason: 'You can stop when needed. There is no lock-in contract.'
  }
] as const;
---
<section class="relative isolate overflow-hidden px-6 pb-24 pt-20 sm:pb-28 sm:pt-24">
  <div class="pointer-events-none absolute inset-x-0 top-0 -z-10 flex justify-center">
    <div class="h-[480px] w-full max-w-5xl -translate-y-1/2 rounded-full bg-rose-gold/30 blur-3xl"></div>
  </div>
  <div class="mx-auto max-w-6xl">
    <div class="grid gap-16 lg:grid-cols-[minmax(0,1fr)_minmax(0,0.85fr)] lg:items-center">
      <div class="space-y-7">
        <p class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-[clamp(0.7rem,1vw,0.85rem)] uppercase tracking-[0.4em] text-rose-petal/80">
          {t(lang, 'home.hero.tag')}
        </p>
        <h1 class="font-display text-[clamp(2.8rem,6vw,4.25rem)] leading-[1.05] text-white">
          {t(lang, 'home.hero.title')}
        </h1>
        <p class="max-w-xl text-[clamp(1.05rem,2.3vw,1.35rem)] text-white/80">
          {t(lang, 'home.hero.sub')}
        </p>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
          <LinkCTA
            class="inline-flex border border-rose-gold/70 bg-rose-gold px-6 py-3 text-lg text-midnight shadow-glow"
            pagesHref="/recruiting/"
            prodHref="/recruiting/"
            label={t(lang, 'home.hero.cta.signup')}
          />
          <LinkCTA
            class="inline-flex border border-white/20 bg-transparent px-6 py-3 text-lg text-white transition hover:border-white/40 hover:bg-white/5"
            pagesHref="/promotion/"
            prodHref="/promotion/"
            label={t(lang, 'home.hero.cta.promo')}
          />
        </div>
        <p class="max-w-2xl text-sm text-white/70">Signup Help (Free) and Promotion (Paid) are separate tracks. Use one or combine both.</p>
        <a
          class="text-xs uppercase tracking-[0.35em] text-white/60 transition hover:text-rose-gold"
          href="/proof/"
        >
          See proof and sample plans
        </a>
        <div class="grid gap-3 text-[clamp(0.7rem,1.2vw,0.85rem)] text-white/60 sm:grid-cols-2">
          {trustPromises.map((promise) => (
            <details class="rounded-2xl border border-white/10 bg-white/5 px-4 py-2">
              <summary class="cursor-pointer uppercase tracking-[0.3em] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-gold">
                {promise.title}
              </summary>
              <p class="mt-2 text-xs normal-case tracking-normal text-white/70">{promise.reason}</p>
            </details>
          ))}
        </div>
        <p class="max-w-xl text-[clamp(0.78rem,1.4vw,0.9rem)] text-white/60">
          Not an agency or studio. No earnings guarantee. We earn only from partner signups.
        </p>
      </div>
      <div class="grid">
        <div class="relative overflow-hidden rounded-[34px] border border-white/10 bg-white/5 p-6 backdrop-blur shadow-glow">
          <img
            class="h-full w-full rounded-3xl object-cover"
            src="/images/home-hero.webp"
            srcset="/images/home-hero-768.jpg 768w, /images/home-hero-1280.jpg 1280w, /images/home-hero.webp 1600w"
            sizes="(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 42vw"
            alt="Smiling red-haired model sitting in a white gaming chair, looking at the camera."
            width="1600"
            height="1067"
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>
</section>
