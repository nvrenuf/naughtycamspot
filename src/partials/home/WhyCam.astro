---
import { withBase } from '../../utils/links';

const tracks = [
  {
    title: 'Recruiting track',
    description:
      'Join partner platforms using tracked signup links, quick setup steps, and clear trust rules.',
    bullets: ['Partner signup links', 'Platform-fit checklist', 'No management contract'],
    ctaLabel: 'Open Recruiting',
    ctaHref: '/recruiting/'
  },
  {
    title: 'Promotion track',
    description:
      'Buy promotion packages when you want more reach, with content planning and weekly reporting.',
    bullets: ['Paid traffic support', 'Simple package pricing', 'Weekly check-ins'],
    ctaLabel: 'View Promotion',
    ctaHref: '/promotion/'
  }
];
---
<section class="border-y border-white/5 bg-black/30 px-6 py-16">
  <div class="mx-auto max-w-6xl space-y-8">
    <div class="space-y-4 text-center">
      <p class="text-[clamp(0.75rem,1.1vw,0.9rem)] uppercase tracking-[0.35em] text-rose-petal/70">
        Two paths
      </p>
      <h2 class="font-display text-[clamp(2rem,4vw,2.8rem)] text-white">Recruiting vs. promotion at a glance</h2>
    </div>
    <div class="grid gap-5 lg:grid-cols-2">
      {tracks.map((track) => (
        <article class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-glow">
          <h3 class="font-display text-[clamp(1.3rem,3vw,1.7rem)] text-white">{track.title}</h3>
          <p class="mt-3 text-[clamp(0.95rem,1.6vw,1.05rem)] leading-relaxed text-white/75">{track.description}</p>
          <ul class="mt-4 space-y-2 text-sm text-white/70">
            {track.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
          <a
            class="mt-5 inline-flex text-[clamp(0.78rem,1.4vw,0.9rem)] uppercase tracking-[0.35em] text-rose-gold transition hover:text-white"
            href={withBase(track.ctaHref)}
          >
            {track.ctaLabel} →
          </a>
        </article>
      ))}
    </div>
    <div class="flex flex-col items-center gap-2 text-center text-white/70">
      <p class="text-[clamp(0.85rem,1.5vw,0.95rem)]">Results depend on consistency, platform fit, and budget.</p>
      <a
        class="text-[clamp(0.85rem,1.5vw,0.95rem)] uppercase tracking-[0.28em] text-rose-gold transition hover:text-white"
        href={withBase('/earnings')}
      >
        See what affects earnings →
      </a>
    </div>
  </div>
</section>
