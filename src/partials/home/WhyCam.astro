---
import { versionedPath } from '../../data/versioning';
import { withBase } from '../../utils/links';

const pillars = [
  {
    title: 'Flexible schedule',
    description: 'You pick your hours and scale at your pace.'
  },
  {
    title: 'Direct earning',
    description: 'Earn directly from your audience with clear goals and tip mechanics.'
  },
  {
    title: 'Work from anywhere',
    description: 'All you need is a phone + lighting basics to start.'
  }
];
---
<section class="border-y border-white/5 bg-black/30 px-6 py-16">
  <div class="mx-auto max-w-6xl space-y-8">
    <div class="space-y-4 text-center">
      <p class="text-[clamp(0.75rem,1.1vw,0.9rem)] uppercase tracking-[0.35em] text-rose-petal/70">
        Why cam with us
      </p>
      <h2 class="font-display text-[clamp(2rem,4vw,2.8rem)] text-white">Why models choose cam work</h2>
    </div>
    <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {pillars.map((pillar) => (
        <article class="rounded-3xl border border-white/10 bg-white/5 p-6 shadow-glow">
          <h3 class="font-display text-[clamp(1.3rem,3vw,1.7rem)] text-white">{pillar.title}</h3>
          <p class="mt-3 text-[clamp(0.95rem,1.6vw,1.05rem)] leading-relaxed text-white/75">{pillar.description}</p>
        </article>
      ))}
    </div>
    <div class="flex flex-col items-center gap-2 text-center text-white/70">
      <p class="text-[clamp(0.85rem,1.5vw,0.95rem)]">Results vary by hours, consistency, and platform fit.</p>
      <a
        class="text-[clamp(0.85rem,1.5vw,0.95rem)] uppercase tracking-[0.28em] text-rose-gold transition hover:text-white"
        href={withBase(versionedPath('/earnings'))}
      >
        See what affects earnings â†’
      </a>
    </div>
  </div>
</section>
