---
import MainLayout from '../layouts/MainLayout.astro';
import SEO from '../components/SEO.astro';
import { withBase } from '../utils/links';
import { promoOffer } from '../data/promoOffer';

const canonicalPath = '/packages';
const buildPromoPackageHref = (packageId: string) =>
  `${withBase('/apply/promo')}?${new URLSearchParams({ package: packageId }).toString()}`;
const modelResponsibilities = Array.from(
  new Set([
    ...promoOffer.sprintOffers.flatMap((offer) => offer.gates),
    ...promoOffer.monthlyTiers.flatMap((tier) => tier.gates)
  ])
);
---

<MainLayout
  title="Packages | NaughtyCamSpot"
  description="Live-cam promo ladder packages for sprint launches, monthly consistency, and platform-safe growth."
>
  <SEO
    slot="head"
    title="Packages | NaughtyCamSpot"
    description="Compare live-cam sprint offers, monthly promo tiers, and add-ons with clear deliverables and trust rules."
    path={canonicalPath}
  />

  <section class="space-y-10">
    <div class="content-card space-y-4">
      <p class="hero-tagline">Live-Cam Promotion Ladder</p>
      <h1 class="font-display text-4xl text-white sm:text-5xl">Sprint + Monthly Promo Packages</h1>
      <p class="max-w-3xl text-base text-white/75">
        Built for live-cam traffic, stronger show structure, and week-over-week consistency without platform-risk shortcuts.
      </p>
      <p class="text-sm text-white/70">Core rules: no passwords, no exclusivity, you own accounts and content.</p>
    </div>

    <div class="content-card space-y-3">
      <h2 class="font-display text-2xl text-white">Supported promo platforms</h2>
      <p class="text-sm text-white/75">Live now: {promoOffer.platformScope.live.join(', ')}</p>
      <p class="text-sm text-white/60">Coming soon: {promoOffer.platformScope.comingSoon.join(', ')}</p>
    </div>

    <div class="space-y-4">
      <h2 class="font-display text-3xl text-white">Sprint offers</h2>
      <div class="grid gap-5 md:grid-cols-2">
        {promoOffer.sprintOffers.map((offer) => (
          <article class="content-card space-y-4">
            <div class="flex flex-wrap items-center justify-between gap-3">
              <p class="text-xs uppercase tracking-[0.35em] text-rose-petal/70">{offer.timeline}</p>
              <a
                class="inline-flex items-center justify-center rounded-full border border-rose-gold/50 bg-rose-gold/15 px-4 py-2 text-xs uppercase tracking-[0.3em] text-rose-petal transition hover:border-rose-gold/70 hover:bg-rose-gold/30"
                href={buildPromoPackageHref(offer.id)}
              >
                Apply for {offer.displayName}
              </a>
            </div>
            <div class="flex flex-wrap items-end justify-between gap-2">
              <h3 class="font-display text-2xl text-white">{offer.displayName}</h3>
              <p class="text-sm text-white/70">{offer.price}</p>
            </div>
            <div class="grid gap-4 sm:grid-cols-2">
              <div class="rounded-2xl border border-white/10 bg-black/20 p-4">
                <h4 class="text-xs uppercase tracking-[0.25em] text-rose-petal/70">Deliverables</h4>
                <ul class="mt-3 space-y-2 text-sm text-white/75">
                  {offer.deliverables.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
              <div class="rounded-2xl border border-white/10 bg-black/20 p-4">
                <h4 class="text-xs uppercase tracking-[0.25em] text-rose-petal/70">Gates</h4>
                <ul class="mt-3 space-y-2 text-sm text-white/75">
                  {offer.gates.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="font-display text-3xl text-white">Monthly tiers</h2>
      <div class="grid gap-5 md:grid-cols-3">
        {promoOffer.monthlyTiers.map((tier) => (
          <article class="content-card space-y-4">
            <div class="flex flex-wrap items-center justify-between gap-3">
              <p class="text-xs uppercase tracking-[0.35em] text-rose-petal/70">{tier.timeline}</p>
              <a
                class="inline-flex items-center justify-center rounded-full border border-rose-gold/50 bg-rose-gold/15 px-4 py-2 text-xs uppercase tracking-[0.3em] text-rose-petal transition hover:border-rose-gold/70 hover:bg-rose-gold/30"
                href={buildPromoPackageHref(tier.id)}
              >
                Apply for {tier.displayName}
              </a>
            </div>
            <div class="flex flex-wrap items-end justify-between gap-2">
              <h3 class="font-display text-2xl text-white">{tier.displayName}</h3>
              <p class="text-sm text-white/70">{tier.price}</p>
            </div>
            <div class="grid gap-4 sm:grid-cols-2">
              <div class="rounded-2xl border border-white/10 bg-black/20 p-4">
                <h4 class="text-xs uppercase tracking-[0.25em] text-rose-petal/70">Deliverables</h4>
                <ul class="mt-3 space-y-2 text-sm text-white/75">
                  {tier.deliverables.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
              <div class="rounded-2xl border border-white/10 bg-black/20 p-4">
                <h4 class="text-xs uppercase tracking-[0.25em] text-rose-petal/70">Gates</h4>
                <ul class="mt-3 space-y-2 text-sm text-white/75">
                  {tier.gates.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="font-display text-3xl text-white">Add-ons</h2>
      <div class="grid gap-5 md:grid-cols-2">
        {promoOffer.addOns.map((addOn) => (
          <article class="content-card space-y-3">
            <div class="flex flex-wrap items-end justify-between gap-2">
              <h3 class="font-display text-2xl text-white">{addOn.name}</h3>
              <p class="text-sm text-white/70">{addOn.price}</p>
            </div>
            <p class="text-sm text-white/75">{addOn.description}</p>
          </article>
        ))}
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="font-display text-3xl text-white">What you provide</h2>
      <div class="content-card">
        <ul class="space-y-2 text-sm text-white/75">
          {modelResponsibilities.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </div>

    <div class="space-y-4">
      <h2 class="font-display text-3xl text-white">What we don&apos;t do</h2>
      <div class="content-card space-y-3">
        <ul class="space-y-2 text-sm text-white/75">
          {promoOffer.nonNegotables.map((item) => (
            <li>{item}</li>
          ))}
          <li>No guarantee of specific earnings outcomes.</li>
        </ul>
      </div>
    </div>
  </section>
</MainLayout>
