---
import SEO from '../components/SEO.astro';
import MainLayout from '../layouts/MainLayout.astro';
import { withBase } from '../utils/links';

const canonicalPath = '/join-models';
const applyHref = withBase('/apply');
const startRightHref = withBase('/startright');
---

<MainLayout
  title="Join models | NaughtyCamSpot"
  description="Join the NaughtyCamSpot talent roster and get simple StartRight prep steps."
>
  <SEO
    slot="head"
    title="Join models | NaughtyCamSpot"
    description="Apply through the main intake. Use StartRight to prep while you wait."
    path={canonicalPath}
  />

  <section class="content-card space-y-4">
    <p class="hero-tagline">Join our roster</p>
    <h1 class="font-display text-4xl text-white sm:text-5xl">Apply for concierge support</h1>
    <p class="max-w-2xl text-base text-white/70">
      We route all new applications through the main intake so we can match you to the right platform and ops tier.
    </p>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
      <a
        data-cta="join-models"
        class="inline-flex items-center justify-center rounded-full border border-rose-gold/70 bg-rose-gold px-6 py-3 text-sm uppercase tracking-[0.3em] text-midnight shadow-glow transition hover:-translate-y-1"
        href={applyHref}
      >
        Apply now
      </a>
      <a
        class="inline-flex items-center justify-center rounded-full border border-white/20 bg-transparent px-6 py-3 text-sm uppercase tracking-[0.3em] text-white transition hover:-translate-y-1 hover:border-white/40 hover:bg-white/5"
        href={startRightHref}
      >
        Prep with StartRight
      </a>
    </div>
    <p class="text-xs uppercase tracking-[0.35em] text-white/50">
      Apply is the canonical intake path. Use StartRight to prep while you wait.
    </p>
  </section>
</MainLayout>
