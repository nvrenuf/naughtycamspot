---
import MainLayout from '../layouts/MainLayout.astro';
import SEO from '../components/SEO.astro';
import { withBase } from '../utils/links';

const canonicalPath = '/vip-kit';
const unlockHref = withBase('/apply?kit=1');
---

<MainLayout
  title="VIP Starter Kit | NaughtyCamSpot"
  description="Unlock the VIP Starter Kit with onboarding checklists, first-week plans, and promo support."
>
  <SEO
    slot="head"
    title="VIP Starter Kit | NaughtyCamSpot"
    description="Unlock the VIP Starter Kit with onboarding checklists, first-week plans, and promo support."
    path={canonicalPath}
  />

  <section class="content-card space-y-6">
    <div class="space-y-3">
      <p class="hero-tagline">VIP Starter Kit</p>
      <h1 class="font-display text-4xl text-white sm:text-5xl">Your launch kit, mapped and ready.</h1>
      <p class="max-w-2xl text-base text-white/70">
        The VIP Starter Kit includes onboarding checklists, a first-week plan, and promo-ready captions so you can move fast
        without giving up control.
      </p>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-4 text-sm text-white/70">
        <p class="text-xs uppercase tracking-[0.35em] text-rose-petal/70">Inside the kit</p>
        <ul class="mt-3 space-y-2">
          <li>Starter checklist with verification steps</li>
          <li>First-week plan for cadence + retention</li>
          <li>Promo captions tailored for launch week</li>
        </ul>
      </div>
      <div class="rounded-2xl border border-white/10 bg-white/5 p-4 text-sm text-white/70">
        <p class="text-xs uppercase tracking-[0.35em] text-rose-petal/70">How it works</p>
        <p class="mt-3">
          Submit your intake so we can match you to the right platform workflow. We deliver the kit right after your
          application is verified.
        </p>
      </div>
    </div>

    <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
      <a
        class="inline-flex items-center justify-center rounded-full border border-rose-gold/70 bg-rose-gold px-6 py-3 text-sm uppercase tracking-[0.3em] text-midnight shadow-glow transition hover:-translate-y-1"
        href={unlockHref}
      >
        Unlock kit
      </a>
      <p class="text-xs uppercase tracking-[0.3em] text-white/45">
        Complete the intake to unlock the kit.
      </p>
    </div>

    <div class="flex flex-wrap gap-3 text-[clamp(0.7rem,1.2vw,0.85rem)] uppercase tracking-[0.3em] text-white/60">
      <span class="rounded-full border border-white/10 bg-white/5 px-4 py-2">No passwords</span>
      <span class="rounded-full border border-white/10 bg-white/5 px-4 py-2">No exclusivity</span>
      <span class="rounded-full border border-white/10 bg-white/5 px-4 py-2">Model owns accounts</span>
      <span class="rounded-full border border-white/10 bg-white/5 px-4 py-2">Cancel anytime</span>
    </div>
  </section>
</MainLayout>
