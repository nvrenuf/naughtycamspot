---
import SEO from '../components/SEO.astro';
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../partials/home/Hero.astro';
import WhyCam from '../partials/home/WhyCam.astro';
import TrustedPrograms from '../partials/home/TrustedPrograms.astro';
import HowItWorks from '../partials/home/HowItWorks.astro';
import FinalCTA from '../partials/home/FinalCTA.astro';

const canonicalPath = '/';

const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'NaughtyCamSpot',
  url: import.meta.env.SITE ?? 'https://naughtycamspot.com'
};
---

<MainLayout
  title="NaughtyCamSpot | Recruiting + Promotion for Cam Models"
  description="NaughtyCamSpot helps cam models in two ways: affiliate recruiting links for platform signup and paid promotion services for audience growth."
>
  <SEO
    slot="head"
    title="NaughtyCamSpot | Recruiting + Promotion for Cam Models"
    description="Join partner platforms through NaughtyCamSpot recruiting links or purchase paid promotion packages to grow your traffic."
    path={canonicalPath}
    ogImage="https://images.unsplash.com/photo-1517841905240-472988babdf9?auto=format&fit=crop&w=1280&q=80"
  />
  <script type="application/ld+json" set:html={JSON.stringify(websiteJsonLd)} />

  <Hero />
  <WhyCam />
  <HowItWorks compact />
  <TrustedPrograms compact />
  <FinalCTA />
</MainLayout>
