---
import MainLayout from '../layouts/MainLayout.astro';
import SEO from '../components/SEO.astro';
import { withBase } from '../utils/links';

const canonicalPath = '/apply';
---

<MainLayout
  title="Apply | NaughtyCamSpot"
  description="Choose Promotion or Signup Help to continue your application."
>
  <SEO
    slot="head"
    title="Apply | NaughtyCamSpot"
    description="Choose Promotion or Signup Help to continue your application."
    path={canonicalPath}
  />

  <section class="content-card space-y-6">
    <div class="space-y-3">
      <p class="hero-tagline">Apply</p>
      <h1 class="font-display text-4xl text-white sm:text-5xl">
        Get matched to Signup Help (Free) or Promotion (Paid).
      </h1>
      <p class="max-w-2xl text-base text-white/70">
        Pick your path to continue. You can always submit both forms separately.
      </p>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      <a
        class="inline-flex items-center justify-center rounded-full border border-rose-gold/70 bg-rose-gold px-6 py-3 text-sm uppercase tracking-[0.3em] text-midnight shadow-glow transition hover:-translate-y-1"
        href={withBase('/apply/promo')}
      >
        Promotion
      </a>
      <a
        class="inline-flex items-center justify-center rounded-full border border-white/20 bg-white/10 px-6 py-3 text-sm uppercase tracking-[0.3em] text-white transition hover:-translate-y-1"
        href={withBase('/apply/signup')}
      >
        Signup Help
      </a>
    </div>
  </section>
</MainLayout>
